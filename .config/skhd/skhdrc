# change focus between external displays (left and right)
cmd + alt + ctrl + shift - u : yabai -m display --focus 1
cmd + alt + ctrl + shift - i : yabai -m display --focus 2
cmd + alt + ctrl + shift - o : yabai -m display --focus 3
cmd + alt + ctrl + shift - p : yabai -m display --focus $(yabai get _last_active_desktop)
cmd + alt + ctrl + shift - a : yabai -m window --focus north
cmd + alt + ctrl + shift - s : yabai -m window --warp north
cmd + alt + ctrl + shift - d : yabai -m window --warp south
cmd + alt + ctrl + shift - f : yabai -m window --focus south
cmd + alt + ctrl + shift - q  : yabai -m window --focus west
cmd + alt + ctrl + shift - w : yabai -m window --warp west
cmd + alt + ctrl + shift - e : yabai -m window --warp east
cmd + alt + ctrl + shift - r : yabai -m window --focus east
cmd + alt + ctrl + shift - j : yabai -m window --toggle zoom-fullscreen
cmd + alt + ctrl + shift - k : yabai -m window --toggle split
cmd + alt + ctrl + shift - l : yabai -m space --rotate 90
cmd + alt + ctrl + shift - n : yabai -m space --mirror x-axis
cmd + alt + ctrl + shift - m : yabai -m space --mirror y-axis
cmd + alt + ctrl + shift - space : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2
cmd + alt + ctrl + shift - t : yabai -m space --focus prev
cmd + alt + ctrl + shift - y : yabai -m space --focus next


# move window to space
cmd + alt + ctrl + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
cmd + alt + ctrl + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
cmd + alt + ctrl + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
cmd + alt + ctrl + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
cmd + alt + ctrl + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
cmd + alt + ctrl + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
cmd + alt + ctrl + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
cmd + alt + ctrl + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8
cmd + alt + ctrl + shift - 8 : yabai -m window --space 9; yabai -m space --focus 9

